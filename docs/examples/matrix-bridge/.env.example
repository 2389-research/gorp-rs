# Matrix Bridge Configuration
# Copy this file to .env and fill in your values

# Matrix homeserver URL (required)
MATRIX_HOMESERVER=https://matrix.example.com

# Matrix bot user ID (required)
MATRIX_USER=@bot:example.com

# Matrix room ID to restrict bot to single room (optional - if not set, listens in ALL rooms)
# MATRIX_ROOM_ID=!abc123:example.com

# Matrix password (required if MATRIX_ACCESS_TOKEN is not set)
MATRIX_PASSWORD=your_password_here

# Matrix access token (optional, alternative to password)
# MATRIX_ACCESS_TOKEN=syt_your_token_here

# Path to claude binary (optional, defaults to "claude")
# CLAUDE_BIN=/usr/local/bin/claude

# SDK URL for remote Claude Code server (optional)
# SDK_URL=http://localhost:8080

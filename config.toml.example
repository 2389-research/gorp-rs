# gorp - Matrix-Claude Bridge Configuration
#
# Configuration file locations (searched in order):
#   1. ./config.toml (current directory - for development)
#   2. ~/.config/gorp/config.toml (XDG config dir)
#
# Data directories:
#   - Crypto store: ~/.local/share/gorp/crypto_store/
#   - Logs: ~/.local/share/gorp/logs/
#   - Schedules DB: ~/.local/share/gorp/scheduled_prompts.db
#
# Docker paths (when using docker-compose):
#   - Config: ./config/config.toml -> /home/gorp/.config/gorp/config.toml
#   - Data: ./data/ -> /home/gorp/.local/share/gorp/
#   - Workspace: ./workspace/ -> /home/gorp/workspace/

[matrix]
# Matrix homeserver URL (required)
home_server = "https://matrix.org"

# Full Matrix user ID for the bot (required)
user_id = "@bot:matrix.org"

# Matrix password (optional if access_token is provided)
password = "your-password-here"

# Matrix access token (optional if password is provided)
# access_token = "syt_..."

# Device name for this bot instance
device_name = "gorp"

# List of allowed user IDs (required)
allowed_users = ["@user1:matrix.org", "@user2:matrix.org"]

# Prefix for room names (default: "Claude")
# Room names will be formatted as "PREFIX: channel-name"
room_prefix = "Claude"

# Recovery key for cross-signing bootstrap (optional)
# If provided, the bot uses this key to automatically verify itself
# without interactive emoji verification. Generate this from Element:
# Security & Privacy > Secure Backup > Set up > Copy Recovery Key
# recovery_key = "EsTR mwqJ JoXZ 8dKN ..."

[acp]
# Path to the ACP agent binary (default: "claude-code-acp")
# agent_binary = "claude-code-acp"

# Timeout for ACP operations in seconds (default: 300)
# timeout_secs = 300

[webhook]
# Port for the webhook HTTP server (default: 13000)
port = 13000

# Host for webhook URLs (default: "localhost")
# This is used when displaying webhook URLs to users
host = "localhost"

# Optional: API key for webhook authentication
# If set, all webhook requests must include this key
# api_key = "your-secret-key-here"

[workspace]
# Directory where channel workspaces are stored (default: "./workspace")
# Supports tilde expansion: ~/projects/gorp-workspace
# Docker: use absolute path like /home/gorp/workspace
path = "./workspace"

[scheduler]
# Timezone for interpreting schedule times (default: auto-detect from system)
# Uses IANA timezone names (e.g., "America/Chicago", "Europe/London", "UTC")
# See: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones
timezone = "America/Chicago"
